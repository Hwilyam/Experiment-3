#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	int i;
	double a[100];
	double b[100];
	double c[100];
	
	cout<<"WEEKLY TEMPERATURES of PROVINCES A, B and C"<<endl;
	cout<<" "<<endl;
	cout<<"--------------------------------------------------- "<<endl;
	
	cout<<"PLEASE INPUT THE TEMPERATURES OF THE FF:"<<endl;
	cout<<" "<<endl;
	cout<<"----------------------------------------------------"<<endl;
	
	for (i = 1; i <= 7; i++)
		{
			cout<<"Province A Day "<<i<<" = ";
			cin>>a[i];
		}
	
	cout<<"----------------------------------------------------"<<endl;	
	
	for (i = 1; i <= 7; i++)
		{
			cout<<"Province B Day "<<i<<" = ";
			cin>>b[i];
		}	
		
	cout<<"----------------------------------------------------"<<endl;	
	
	for (i = 1; i <= 7; i++)
		{
			cout<<"Province C Day "<<i<<" = ";
			cin>>c[i];
		}	
	
	cout<<"----------------------------------------------------"<<endl;					
	cout<<"DISPLAYING THE INPUT:"<<endl;
	cout<<" "<<endl;
	for (i = 1; i <= 7; i++)
		{
			cout<<"Province A Day "<<i<<" = "<<a[i]<<endl;
		}
	for (i = 1; i <= 7; i++)
		{
			cout<<"Province B Day "<<i<<" = "<<b[i]<<endl;
		}		
	for (i = 1; i <= 7; i++)
		{
			cout<<"Province C Day "<<i<<" = "<<c[i]<<endl;
		}

					
	_getch();
	return 0;
}
